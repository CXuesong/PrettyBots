<Window x:Class="PBRepositoryManager.VerificationCodeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="键入验证码" Height="300" Width="300" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Image x:Name="VImageBox"/>
        <TextBox x:Name="VCodeBox" Grid.Row="1" TextWrapping="Wrap" Text="TextBox" FontSize="24" Margin="0,5"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="OKButton" Content="确定" Margin="5,0" Padding="20,5" IsDefault="True" Click="OKButton_Click"/>
            <Button x:Name="CancelButton" Content="取消" Margin="5,0" Padding="20,5" IsCancel="True"/>
        </StackPanel>

    </Grid>
</Window>
